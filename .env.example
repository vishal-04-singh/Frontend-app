# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/football-tournament

# JWT Secret Key (CHANGE THIS!)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Server Port
PORT=3000

# Environment
NODE_ENV=development

# Database Configuration
DB_NAME=football-tournament

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:19006,http://localhost:8081

# Security Settings
SESSION_TIMEOUT=24
RATE_LIMIT=100

# File Upload Settings
MAX_FILE_SIZE=5
UPLOAD_DIR=uploads

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=

# Logging
LOG_LEVEL=info
DEBUG=true
